<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>bsu.fpmi.educational_practice.RegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>bsu.fpmi.educational_practice.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateClubServlet</servlet-name>
        <servlet-class>bsu.fpmi.educational_practice.CreateClubController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateClubServlet</servlet-name>
        <url-pattern>/createclub</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddModeratorController</servlet-name>
        <servlet-class>bsu.fpmi.educational_practice.AddModeratorController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddModeratorController</servlet-name>
        <url-pattern>/add_moderator</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SessionController</servlet-name>
        <servlet-class>bsu.fpmi.educational_practice.SessionController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionController</servlet-name>
        <url-pattern>/session</url-pattern>
    </servlet-mapping>
</web-app>